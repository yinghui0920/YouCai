<script>
    function GetCode() {
        var phone_num = /^1(3|4|5|7|8)\d{9}$/;
        var flag = 1; //短信发送时标志位
            if ($("#PhoneNum").val() == "") {
                alert("请输入手机号码！");
                return false;
            };
            if (!phone_num.test($("#PhoneNum").val().trim())) {
                alert("您的手机号格式不正确！");
                return false;
             };
            if (flag == 1) {
                var i = 59;
                flag = 0;   
                var n = setInterval(function () {
                    var j = i + 's';
                    $('#codes').val(j);
                    i--;
                    if (i < -1) {
                        clearInterval(n);
                        flag = 1;
                        $('#codes').val('重新获取').prop("disabled", false);
                    }
                }, 1000);
            }
        var phone = $("#PhoneNum").val();
        $.ajax({
            url: "/LoanItem/MessageType?tel=" + phone,
            success: function (data) {
                console.log(data);
                return;  
            }
        })
    }
    function ZhuCe() {
        var code = $("#code").val();
        var value = $("#mar").val();
        if (code == "") {
            alert("验证码不能为空！");
        }
        if (code != value) {
            alert("验证码不正确！");
        }
        }
    
</script>


