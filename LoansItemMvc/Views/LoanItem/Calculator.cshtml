<script>
    //利率计算器
    function Calc() {
        //正则验证
        var num = /^\d+$|^\d+[.]?\d+$/;
        if (!num.test($("#txtMon").val().trim()) || ($("#txtMon").val() == 0)) {
            alert("请输入正确的贷款金额");
            return false;
        };
        if (!num.test($("#txtDate").val().trim()) || ($("#txtMon").val() == 0)) {
            alert("请输入正确的贷款期限");
            return false;
        };
        if (!num.test($("#txtRate").val().trim()) || ($("#txtMon").val() == 0)) {
            alert("请输入正确的贷款年利率");
            return false;
        };
        //公式计算
        var mon = $("#txtMon").val();
        var date = $("#txtDate").val();
        var rate = $("#txtRate").val();
        var n = (mon * date / 12 * rate * 0.01);
        //var n = (本金 * 期数 / 12 * 利率 * 0.01);
        document.getElementById("lab1").innerHTML = n;
        document.getElementById("lab2").innerHTML = n + parseInt(mon);
    }
    //清空计算器
    function Clear() {
        var txts = document.getElementsByTagName("input");
        for (var i = 0; i < txts.length; i++) {
            if (txts[i].type == "text") {
                txts[i].value = "";
            }
        }
        document.getElementById("lab1").innerHTML = "";
        document.getElementById("lab2").innerHTML = "";


    }
</script>
