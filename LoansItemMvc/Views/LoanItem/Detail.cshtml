<script>
    //加载就绪
    $(function () {
        SelList();
        SelList1()
    })
    //绑定下拉1
    function SelList() {
        $("#SelList").empty();
        $("#SelList").append("<option>请选择</option>");

        $.ajax({
            url: '/LoanItem/ListTable',
            type: 'get',
            dataType: 'json',
            success: function (data) {
                $(data).each(function () {
                    var p = "<option value = '" + this.I_Id + "'>" + this.I_Name + "</option>"
                    $("#SelList").append(p);
                })
            }
        })
    }
    //绑定下拉2
    function SelList1() {
        $("#SelList1").empty();
        $("#SelList1").append("<option>请选择</option>");

        $.ajax({
            url: '/LoanItem/ListGoal',
            type: 'get',
            dataType: 'json',
            success: function (data) {
                $(data).each(function () {
                    var p = "<option value = '" + this.IG_Id + "'>" + this.IG_Name + "</option>"
                    $("#SelList1").append(p);
                })
            }
        })
    }
    //保存
    function Save() {
        //正则验证
        var tel = /^1(3|4|5|7|8)\d{9}$/;
        var num = /^\d+$|^\d+[.]?\d+$/;
        if ($("#txtName").val() == "") {
            alert("姓名不能为空");
            return;
        };
        if ($("#txtMon").val() < 1 || $("#txtMon").val() > 20) {
            alert("请输入正确的贷款金额");
            return;
        };
        if ($("#txtDate").val() < 1 || $("#txtDate").val() > 24) {
            alert("请输入正确的贷款期限");
            return;
        };
        if (!tel.test($("#txtTel").val().trim())) {
            alert("请输入正确的手机号");
            return;
        };
        if (!$("#Checkbox1")[0].checked)
        {
            alert("请同意借款协议");
            return;
        }
        var files = $("#fileInput").get(0).files;
        var fileData = new FormData();
        for (var i = 0; i < files.length; i++) {
            fileData.append("fileInput", files[i]);
        }

        var name = $("#txtName").val();
        var sex = $("input[name='sex']:checked").val();
        var list = $("#SelList").val();
        var type = $("input[name='type']:checked").val();
        var mon = $("#txtMon").val();
        var date = $("#txtDate").val();
        var list1 = $("#SelList1").val();
        var tel = $("#txtTel").val();
        var remark = $("#TextArea").val();

        var obj = {
            Ud_Name: name,
            Ud_Sex: sex,
            Ud_IdentityID: list,
            Ud_Type: type,
            Ud_Money: mon,
            Ud_Time: date,
            Ud_Goal: list1,
            Ud_Phone: tel,
            Ud_Remark: remark,
            Ud_UserId: 9,
            Ud_BillId: 1,
            //Ud_AuditId
            Ud_TypeId:@Session["key"],
        }     


        $.ajax({
                url: '/LoanItem/Detaila',
                type: 'post',
                contentType: 'application/json',
                // Not to set any content header
                processData: false,
                dataType:'json',
                 // Not to process data
                data:fileData, //{ YCUser:obj},
                success: function (result, status, xhr) {
                    alert(result);
                    $("#fileInput").val("");
                },
                error: function (xhr, status, error) {
                    alert(status);
                }
            });

        //$.ajax({
        //    url: '/LoanItem/Detaila',
        //    type: 'post',
        //    data: { YCUser: obj },
        //    success: function (data) {
        //        console.log(data);
        //        return;
        //    }
        //})
    }
</script>

